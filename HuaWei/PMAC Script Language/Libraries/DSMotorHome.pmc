open subprog DSMotorHome(motor_num,homevel,polarity)
local index;
Ldata.motor=motor_num;
index=motor_num;
DS_RESET=1
Call Timer.sec(0.5)
DS_RESET=0
Motor[index].HomeVel=-abs(homevel);
Call Timer.sec(0.5)
	switch(HomeStatus(index))
	{
		case 0:
		if(Motor[index].PlusLimit==1)
		{
			
		}
		else
		{
			HomeStatus(index)=1;
		}
		break;
		case 1:
			jog/
			Call Timer.sec(0.1)
			HTimer(index)=Sys.Time;
			HomeStatus(index)=2;
		break;
		case 2:
			if((Sys.Time-HTimer(index))<5 && Motor[index].AmpEna!=1)
			{
				HomeStatus(index)=2
				jog/
				Call Timer.sec(0.1)
			}
			else if((Sys.Time-HTimer(index))<5 && Motor[index].AmpEna==1)
			{
				HomeStatus(index)=3
			}
			else
			{
				HomeStatus(index)=255
			}
		break;
		case 3:
			if((Sys.Time-HTimer(index))<20 && Motor[index].PlusLimit!=1)
			{
				HomeStatus(index)=3
				Call Timer.sec(0.1)
			}
			else if((Sys.Time-HTimer(index))<20 && Motor[index].PlusLimit==1)
			{
				Motor[index].pLimits=0
				Gate3[1].Chan[1].CaptFlagSel = 1//正限位
				Gate3[1].Chan[1].CaptCtrl=2//10
				Call Timer.sec(0.1)
				HomeStatus(index)=7
			}
			else
			{
				HomeStatus(index)=255
			}
		break;
		case 4:
			jog/
			Call Timer.sec(0.1)
			HTimer(index)=Sys.Time;
			HomeStatus(index)=5;
		break;
		case 5:
			if((Sys.Time-HTimer(index))<5 && Motor[index].AmpEna!=1)
			{
				HomeStatus(index)=5
				jog/
				Call Timer.sec(0.1)
			}
			else if((Sys.Time-HTimer(index))<5 && Motor[index].AmpEna==1)
			{
				HomeStatus(index)=6
			}
			else
			{
				HomeStatus(index)=255
			}
		break;
		case 6:
				Motor[index].pLimits=0
				Gate3[1].Chan[1].CaptFlagSel = 1//正限位
				Gate3[1].Chan[1].CaptCtrl=10//2(高)
				Call Timer.sec(0.1)
				HomeStatus(index)=7;
		break;
		case 7:
			home
			HTimer(index)=Sys.Time;
			Call Timer.sec(0.1)
			if(Motor[index].HomeInProgress==1)
			{
			HomeStatus(index)=8;
			}
			else if(Motor[index].HomeComplete!=1)
			{
			HomeStatus(index)=7;
			}
			else
			{
			HomeStatus(index)=8;
			}
		break;
		case 8:
			if((Sys.Time-HTimer(index))<120 && Motor[index].HomeComplete!=1)
			{
				HomeStatus(index)=8
			}
			else if((Sys.Time-HTimer(index))<120 && Motor[index].HomeComplete==1)
			{
				HomeStatus(index)=9
			}
			else
			{
				HomeStatus(index)=255
			}
		break;
		case 9:
			Motor[21].pLimits=Gate3[1].Chan[1].Status.a   
			HomeStatus(index)=254
			HomeStatus(index)=0
			HomeMotor(index)=0
		break;
		case 255:
			Motor[21].pLimits=Gate3[1].Chan[1].Status.a
		break;
		default:
		break;
	}
   return;
close
